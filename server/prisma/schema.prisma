generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  name         String
  email        String? @unique
  phone        String  @unique
  role         Role
  isClubMember Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Employee {
  id Int @id @default(autoincrement())

  surname   String
  name      String
  job       String
  workplace String?
  biography String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Location {
  id Int @id @default(autoincrement())

  name    String
  address String
  map     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  COACH
  DANCER
  ADMIN
}
